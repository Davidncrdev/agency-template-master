---
import { Image } from "astro:assets";
import Container from "../shared/Container.astro";
import Title from "../shared/Title.astro";

import hostinger from "../../assets/logos/hostinger.png";
import slack from "../../assets/logos/slack.png";
import paypallogo from "../../assets/logos/paypallogo.png";
import youtubeadslogo from "../../assets/logos/youtubeadslogo.png";
import vercellogo from  "../../assets/logos/vercellogo.png";
import console  from "../../assets/logos/console.png";

const brands = [
  {
    id: 1,
    name: "hostinger",
    logo: hostinger,
  },
  {
    id: 2,
    name: "Slack",
    logo: slack,
  },
  {
    id: 3,
    name: "Paypal",
    logo: paypallogo,
  },
  {
    id: 4,
    name: "youtubeadslogo",
    logo: youtubeadslogo,
  },
  {
    id: 5,
    name: "google search console",
    logo: console,
  },
  {
    id: 6,
    name: "vercel",
    logo: vercellogo,
  },
  
];

export interface Props {
  className?: string;
}

const { className } = Astro.props;
---

<section class=`${className}`>
  <Container className="space-y-8">
    <div class="text-center max-w-3xl mx-auto">
      <Title>Integraciones.</Title>
    </div>
    <div class="flex justify-center flex-wrap gap-4">
      {
        brands.map((brand) => (
          <div class="p-4 sm:p-5 rounded-xl border border-box-border group bg-box-bg">
            <Image
              src={brand.logo}
              width="100"
              height="60"
              alt={brand.name}
              class="h-7 sm:h-10 w-auto ease-linear duration-300 grayscale group-hover:!grayscale-0 group-hover:scale-105"
            />
          </div>
        ))
      }
    </div>
  </Container>
</section>
